function largestNumIn2DArray(arr) {
  var array = [];
  
  // loops through array
  for (var i = 0; i < arr.length; i++) {
    var largest = 0;
    // loops through subarray
    for (var j = 0; j < arr[i].length; j++) {
      // stores largest num in subarray in variable
      if (arr[i][j] > largest)
        largest = arr[i][j];
    }
    array[i] = largest;
  }
     
  return array;
}
